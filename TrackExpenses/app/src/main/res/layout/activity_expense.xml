<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.sajaynix.trackexpenses.ExpenseActivity">

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10pt"
        android:textColor="#444444"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="9dip"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="10dip"
        android:text="Amount:"/>
    <EditText
        android:id="@+id/et_amount"
        android:layout_width="150dip"
        android:layout_height="wrap_content"
        android:background="@android:drawable/editbox_background"
        android:layout_toRightOf="@id/tv_amount"
        android:layout_alignTop="@id/tv_amount"
        android:inputType="text"
        android:hint="@string/amount_spent"
        />
    <Button
        android:id="@+id/btn_add_expense"
        android:layout_width="100dip"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_amount"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dip"
        android:layout_marginLeft="160dip"
        android:onClick="addExpense"
        android:hint="@string/button_add_expense"
        />
</RelativeLayout>
